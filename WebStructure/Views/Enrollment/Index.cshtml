@model EnrollmentViewModel

@{
    ViewData["Title"] = "Enrollment";
}
@if (Model.Messages.Count > 0)
{
    <div class="alert-danger">
        @foreach (var error in Model.Messages)
        {
            <span>
                @if (!string.IsNullOrWhiteSpace(error.CustomMessage))
                {
                    @error.CustomMessage
                }
                else if (Model.IsError)
                {
                    @error.ExceptionMessage
                }
            </span>
        }
    </div>
}
<div class="row">
    <div class="col-sm-12 d-flex justify-content-end m-2">
        <a asp-controller="Enrollment" asp-action="Edit" class="btn btn-primary">Add</a>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <div class="header-title">
                    <h4 class="card-title">Enrollment Table</h4>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="datatable" class="table table-striped" data-toggle="data-table">
                        <thead>
                            <tr>
                                <th>
                                    FirstName
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    ClassName
                                </th>
                                <th>
                                    Timing
                                </th>
                                <th>
                                    Grade
                                </th>
                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Enrollments)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.WebUser.FirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.WebUser.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Class.ClassName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Class.Timing.TimeOfDay)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Class.Grade)
                                    </td>
                                    <td>
                                        <a class="btn btn-sm btn-icon btn-danger" data-bs-toggle="tooltip" data-bs-placement="top" title="Enrollment" asp-controller="Enrollment" asp-action="Delete" asp-route-id="@item.Id">
                                            <span class="btn-inner">
                                                <svg class="icon-20" width="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" stroke="currentColor">
                                                    <path d="M19.3248 9.46826C19.3248 9.46826 18.7818 16.2033 18.4668 19.0403C18.3168 20.3953 17.4798 21.1893 16.1088 21.2143C13.4998 21.2613 10.8878 21.2643 8.27979 21.2093C6.96079 21.1823 6.13779 20.3783 5.99079 19.0473C5.67379 16.1853 5.13379 9.46826 5.13379 9.46826" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                                                    <path d="M20.708 6.23975H3.75" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                                                    <path d="M17.4406 6.23973C16.6556 6.23973 15.9796 5.68473 15.8256 4.91573L15.5826 3.69973C15.4326 3.13873 14.9246 2.75073 14.3456 2.75073H10.1126C9.53358 2.75073 9.02558 3.13873 8.87558 3.69973L8.63258 4.91573C8.47858 5.68473 7.80258 6.23973 7.01758 6.23973" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                                                </svg>
                                            </span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
